@model BquizDB.Entities.bq_User

@{
    ViewBag.Title = "Edit Profile";
    //Layout = "~/Views/Shared/_zing_user_layout.cshtml";
    Layout = "~/Views/Shared/_zing_pure_layout.cshtml";
}

<div style="margin-bottom:15px;">    
    <div style="font-size:22px; margin-bottom:20px">
        <span class="label label-info" 
            style="font-weight:lighter; font-family:tahoma">@ViewBag.Title</span>
    </div>
</div>
<p>Use the form below to change your profile.</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    function onSuccess(e) {
        // Array with information about the uploaded files
        var files = e.files;

        if (e.operation == "Upload") {
            alert("Successfully uploaded " + files.length + " files");
            $.each(files, function () {

                //alert(this.name)
                imagesname.value = this.name;
                while (imagesshow.childElementCount > 0) {
                    imagesshow.removeChild(imagesshow.lastChild);

                }
                imagesshow.innerHTML = imagesshow.innerHTML + "<img src=\\Bquiz_Data\\Avatars\\" + this.name + " height =20 width=30/>";
                   // e.preventDefault();
                   // return false;
            });
        }
    }
</script>

<form class="form-horizontal" role="form">
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")

    <div class="form-group">
        <label for="userName" class="col-sm-3 control-label">User name</label>

        <div class="col-sm-9">
            <input type="text" class="form-control" id="userName" value="@Model.UserName">
        </div>
    </div>
    
    <div class="form-group">
        <label for="birthDay" class="col-sm-3 control-label">Birthday</label>

        <div class="col-sm-9">
            <input type="text" class="form-control" id="birthDay" value="@Model.Birthday">
        </div>
    </div>
    
    <div class="form-group">
        <label for="gender" class="col-sm-3 control-label">Gender</label>

        <div class="col-sm-9">
            <input type="text" class="form-control" id="gender" value="@Model.Gender">
        </div>
    </div>
    
    <div class="form-group">
        <label for="avatar" class="col-sm-3 control-label">Avatar</label>

        <div class="col-sm-9">
            <input type="text" class="form-control" id="avatar"value="@Model.Avatar">
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <div class="pull-right">
                <a href="@Url.Action("index", "quiz")" class="btn btn-default">Cancel</a>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</form>


