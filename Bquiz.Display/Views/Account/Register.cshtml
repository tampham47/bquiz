@model Bquiz.Display.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_zing_pure_layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row" style="margin-top:46px">
        <div class="col-md-4 col-md-offset-4">
            <div style="font-family:'Century Gothic'; font-size:16px; width:100%; text-align:center; margin:4px 0px">Registration</div>

            <div class="form-group">
                <label>Username</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>

            <div class="form-group">
                <label>Password</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <label>Confirm password</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>

            <div class="form-group">
                <input class="btn btn-success col-md-6 pull-right" type="submit" value="submit" />
            </div>
        </div>
    </div>
}

