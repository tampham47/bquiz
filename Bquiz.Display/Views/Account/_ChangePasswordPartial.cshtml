@model Bquiz.Display.Models.LocalPasswordModel

<form class="form-horizontal" role="form">
    <div class="form-group">
        <label for="current-pass" class="col-sm-3 control-label">Current password</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.OldPassword, new { @class="form-control", id="current-pass" })
        </div>
    </div>
    
    <div class="form-group">
        <label for="new-pass" class="col-sm-3 control-label">New password</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.NewPassword, new { @class="form-control", id="new-pass" })
        </div>
    </div>

    <div class="form-group">
        <label for="confirm-pass" class="col-sm-3 control-label">Confirm password</label>
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class="form-control", id="confirm-pass" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <div class="pull-right">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</form>

