<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>

    @*sitefinity*@
    @(Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.metro.css").Combined(true).Compress(true)))</head>
<body class="BodyBackground">
    
    @Html.Partial("_HeaderPartial")

    <div class="page">
        <div id="Main">
            <div>
                <div id="LeftPanel">
                    @RenderSection("LeftPanel", required: false)

                    <a href="#" class="DarkMetroButton">User Infomation</a>
                    <div class="MetroPanel">
                        <a href="/User/EditProfile">Edit Profile</a>
                        <a href="/User/ChangePassword">Change password</a>
                        <a href="/User/MyQuiz">Manage Your Quiz</a>
                        <a href="/User/History">Test History</a>
                        <a href="/User/LogOff">Logout</a>
                    </div>
                </div>

                <div id="MainPanel" style="height:100%; width: 750px">
                    @RenderBody()
                </div>

                @*<div id="RightPanel" style="vertical-align:top">
                    @RenderSection("RightPanel", required: false)
                </div>*@
            </div>
         </div>
    </div>

    @(Html.Telerik().ScriptRegistrar().DefaultGroup(group => group.Combined(true).Compress(true)))</body>
</html>
