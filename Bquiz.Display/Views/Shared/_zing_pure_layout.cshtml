<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    
    <!-- bootstrap -->
    <link href="~/Content/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- main -->
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendoui/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendoui/styles/kendo.metro.min.css" rel="stylesheet" />

    <!-- jquery -->
    <script src="@Url.Content("~/Content/scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
<body class="BodyBackground" id="bquiz_container">
    
    @Html.Partial("_HeaderPartial")

    <div class="page">
        <div id="Main">
            @RenderBody()
         </div>
    </div>

    @*@Html.Partial("_FooterPartial")*@

    <!-- scripts -->
    <script src="~/Content/libs/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/kendoui/js/kendo.web.min.js"></script>
    <script type="text/javascript" src="http://static.me.zing.vn/v3/js/zm.xcall-1.01.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            var h = document.getElementById('bquiz_container').offsetHeight;
            console.log("ready - h: " + h);
            h = parseFloat(h);
            zmXCall.resizeParent({
                id: "bquiz",
                height: h
            });

        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
